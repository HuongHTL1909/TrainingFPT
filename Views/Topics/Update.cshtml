@model TrainingFPT.Models.TopicDetail
@{
    ViewData["Title"] = "Update Topics Page";
    ViewData["namePage"] = "Update Topic";
    ViewBag.report = false;

    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <a class="btn btn-primary" href="@Url.Action("Index", "Topics")"> Back to list Topics </a>
        <div class="card card-primary my-3">
            <div class="card-header">
                <h5 class="card-title"> Update Topic</h5>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" method="post" asp-action="Update">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NameTopic"></label>
                                <input type="text" class="form-control" asp-for="NameTopic" />
                                <span asp-validation-for="NameTopic"></span>
                                <input type="hidden" asp-for="Id" />
                            </div>
                            <div class="form-group mb-3">
                                <label> Category </label>
                                <select class="form-control"
                                        asp-for="CourseId"
                                        asp-items="@(new SelectList(ViewBag.Course, "Value", "Text"))">
                                </select>
                                <span asp-validation-for="CourseId"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Description"></label>
                                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="Status"></label>
                                <select class="form-control" asp-for="Status">
                                    <option value=""> -- Choose --</option>
                                    <option value="Active"> -- Active --</option>
                                    <option value="Deactive"> -- Deactive --</option>
                                </select>
                                <span asp-validation-for="Status"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Video"></label>
                                <input type="file" class="form-control" accept="video/*" asp-for="Video" />
                                <span asp-validation-for="Video"></span>
                                <br />
                                @if (!string.IsNullOrEmpty(Model.NameVideo))
                                {
                                    <video width="50%" controls>
                                        <source src="/uploads/videos/@Model.NameVideo" type="video/mp4">
                                        Your browser does not support the video tag.
                                    </video>
                                }
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Audio"></label>
                                <input type="file" class="form-control" accept="audio/*" asp-for="Audio" />
                                <span asp-validation-for="Audio"></span>
                                <br />
                                @if (!string.IsNullOrEmpty(Model.NameAudio))
                                {
                                    <audio controls>
                                        <source src="/uploads/audio/@Model.NameAudio" type="audio/mp3">
                                        Your browser does not support the audio tag.
                                    </audio>
                                }
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="DocumentTopic"></label>
                                <input type="file" class="form-control" accept=".doc,.docx,.pdf,.txt,.rtf" asp-for="DocumentTopic" />
                                <span asp-validation-for="DocumentTopic"></span>
                                <br />
                                @if (!string.IsNullOrEmpty(Model.NameDocumentTopic))
                                {
                                    <a href="/uploads/documents/@Model.NameDocumentTopic" target="_blank">@Model.NameDocumentTopic</a>
                                }
                            </div>
                            <button class="my-3 btn btn-primary btn-lg" type="submit">
                                Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>