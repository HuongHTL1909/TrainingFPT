@model TrainingFPT.Models.TopicsViewModel

@{
    ViewData["Title"] = "Topics Page";
    ViewData["namePage"] = "Topic";
    ViewBag.report = false;

    Layout = "~/Views/Shared/_LayoutMain.cshtml";

    bool saveStatus = Convert.ToBoolean(TempData["saveStatus"]);
    bool statusDel = Convert.ToBoolean(TempData["statusDel"]);
    bool statusUpdate = Convert.ToBoolean(TempData["updateStatus"]);
}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <a class="btn btn-primary" href="@Url.Action("Add", "Topics")"> Add Topic + </a>
        <form asp-action="Index" method="get" class="my-3">
            <div class="form-group mb-3">
                Find by name: <input name="search" value="@ViewData["keyword"]" />
                <span> | </span>
                Filter by status :
                <select name="Status">
                    <option value=""> --- Choose Status ---</option>
                    @if (ViewBag.Status == "Active")
                    {
                        <option value="Active" selected="selected"> Active </option>
                    }
                    else
                    {
                        <option value="Active"> Active </option>
                    }

                    @if (ViewBag.Status == "Deactive")
                    {
                        <option value="Deactive" selected="selected"> Deactive </option>
                    }
                    else
                    {
                        <option value="Deactive"> Deactive </option>
                    }
                </select>
                <span> | </span>
                <button type="submit" class="btn btn-primary btn-sm mb-0"> Search and Filter</button>
                <span> | </span>
                <a class="btn btn-sm btn-info mb-0 ml-2" asp-action="Index">Back to lists</a>
            </div>
        </form>
        @if (TempData["saveStatus"] != null)
        {
            @if (saveStatus)
            {
                <div class="text-success my-3">
                    Create new Topic successfully
                </div>
            }
            else
            {
                <div class="text-danger my-3">
                    Create new Topic failure
                </div>
            }
        }
        @if (TempData["statusDel"] != null)
        {
            @if (statusDel)
            {
                <div class="text-success my-3"> Delete successfully</div>
            }
            else if (!statusDel)
            {
                <div class="text-danger my-3"> Delete Failure</div>
            }
        }
        @if (TempData["updateStatus"] != null)
        {
            @if (statusUpdate)
            {
                <div class="text-success my-3"> Update successfully</div>
            }
            else if (!statusUpdate)
            {
                <div class="text-danger my-3"> Update Failure</div>
            }
        }
        <table class="my-3 table table-bordered table-striped">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Course</th>
                    <th>Video</th>
                    <th>Audio</th>
                    <th>Document</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th colspan="2" width="10%" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TopicDetailList)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.NameTopic</td>
                        <td>@item.viewCourseName</td>
                        <td width="10%">
                            <video class="img-fluid" controls alt="@item.NameTopic">
                                <source src="/uploads/videos/@item.NameVideo" />
                            </video>
                        </td>
                        <td width="10%">
                            <audio controls>
                                <source src="/uploads/audios/@item.NameAudio" type="audio/mp3" />
                            </audio>
                        </td>
                        <td width="10%">
                            <a href="/uploads/documents/@item.NameDocumentTopic" download>Download document</a>
                        </td>
                        <td>@item.Description</td>
                        <td>@item.Status</td>
                        <td>
                            <a class="btn btn-info btn-sm mb-0" href="@Url.Action("Update", "Topics", new {id = @item.Id})">Edit</a>
                        </td>
                        <th>
                            <a class="btn btn-danger btn-sm mb-0" href="@Url.Action("Delete", "Topics", new {id = @item.Id})"> Delete</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>